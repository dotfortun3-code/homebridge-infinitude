{
  "pluginAlias": "InfinitudePlatform",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "<p align=\"center\"><img width=\"30%\" src=\"https://user-images.githubusercontent.com/8211291/131715404-6aa429a1-6a57-447c-b1b6-7ac84ee79977.jpg\"</p>",
  "schema": {
    "thermostats": {
      "type": "array",
      "items": {
        "title": "Thermostats",
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string",
            "required": true
          },
          "url": {
            "title": "URL of Infinitude e.g. http://{host}:{port}",
            "type": "string",
            "format": "uri",
            "required": true
          },
          "holdUntil": {
            "title": "Time to hold until (will hold forever if not specified), also used when no activity scheduled in this system",
            "type": "string",
            "pattern": "^([0-1][0-9]|2[0-3]):[0-5][0-9]$"
          },
          "shutOffAway": {
            "title": "Set system to Away when set to Off in HomeKit for this system",
            "type": "boolean",
            "default": false
          },
          "holdUntilNextActivity": {
            "title": "Hold until next scheduled activity for this system",
            "type": "boolean",
            "default": false
          },
          "useOutdoorTemperatureSensor": {
            "title": "Create outdoor temperature sensor for this system",
            "type": "boolean",
            "default": true
          },
          "useFan": {
            "title": "Create an accessory for the fan blower",
            "type": "boolean",
            "default": false
          }
        }
      }
    }
  }
}