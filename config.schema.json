{
  "pluginAlias": "InfinitudePlatform",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "<p align=\"center\"><img width=\"30%\" src=\"https://user-images.githubusercontent.com/8211291/131715404-6aa429a1-6a57-447c-b1b6-7ac84ee79977.jpg\"</p>",
  "schema": {
    "type": "object",
    "properties": {
      "url": {
        "title": "URL of Infinitude e.g. http://{host}:{port}",
        "type": "string",
        "format": "uri",
        "required": true
      },
      "holdUntil": {
        "title": "Time to hold until (will hold forever if not specified), also used when no activity scheduled in t-stat",
        "type": "string",
        "pattern": "^([0-1][0-9]|2[0-3]):[0-5][0-9]$"
      },
      "shutOffAway": {
        "title": "Set system to Away when set to Off in HomeKit",
        "type": "boolean",
        "default": false
      },
      "holdUntilNextActivity": {
        "title": "Hold until next scheduled activity",
        "type": "boolean",
        "default": false
      },
      "manufacturer": {
        "title": "Manufacturer",
        "type": "string"
      },
      "Model": {
        "title": "Model",
        "type": "string"
      },
      "serial": {
        "title": "Serial Number",
        "type": "string"
      },
      "useOutdoorTemperatureSensor": {
        "title": "Create outdoor temperature sensor",
        "type": "boolean",
        "default": true
      }
    }
  },
  "layout": [
    { "type": "section", "title": "Properties", "items": [ "url", "holdUntil", "holdUntilNextActivity", "shutOffAway" ] },
    { "type": "section", "title": "Accessories", "items": [ "useOutdoorTemperatureSensor" ] },
    { "type": "section", "title": "Accessory Information", "items": [ "manufacturer", "model", "serial" ] }
]
}
